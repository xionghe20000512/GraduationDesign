<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_album_item_bg">

    <TextView
        android:textColor="#979797"
        android:layout_centerVertical="true"
        android:id="@+id/order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="18dp"
        android:text="0"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/order_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_item_title"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:textColor="#000000"
            android:text="我是大标题我是大标题我是大标题我是大标题"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_item_play_count"
                android:textSize="12sp"
                android:drawableLeft="@mipmap/icon_play_2"
                android:drawablePadding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#979797"
                android:text="14.4万"/>

            <TextView
                android:id="@+id/detail_item_duration"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#979797"
                android:drawableLeft="@mipmap/icon_sound"
                android:drawablePadding="4dp"
                android:text="05:23"/>


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="#979797"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12px"
        android:text="2018-11-22"
        android:id="@+id/detail_item_update_time"/>

</RelativeLayout>